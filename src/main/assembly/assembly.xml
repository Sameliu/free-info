<assembly>
    <id>assembly</id>
    <formats>
        <format>jar</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>

    <dependencySets>
        <dependencySet>
            <excludes>
                <exclude>junit:junit</exclude>
                <exclude>com.netflix.curator:*</exclude>
                <exclude>org.jboss:*</exclude>
                <exclude>org.eclipse*</exclude>
                <exclude>org.apache.hadoop*</exclude>
                <exclude>org.apache.velocity:*</exclude>
                <exclude>org.apache.flume:*</exclude>
                <exclude>org.apache.avro:*</exclude>
                <exclude>org.mortbay.jetty:*</exclude>
            </excludes>
            <unpack>true</unpack>
            <unpackOptions>
                <excludes>
                    <exclude>**/defaults.yaml</exclude>
                    <exclude>**/NOTICE</exclude>
                    <exclude>**/LICENSE</exclude>
                    <exclude>**/*.dtd</exclude>
                    <exclude>**/*.txt</exclude>
                    <exclude>**/*.xsd</exclude>
                </excludes>
            </unpackOptions>
        </dependencySet>
    </dependencySets>
</assembly>
